{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
<div class="section-title">
        <h2><span>Knowledge is Power </span></h2>
    </div>
<section class="blog-posts grid-system">
      <div class="container">
<div class="row">
          <div class="col-lg-8">
            <div class="all-blog-posts">
    <div class="row">
<div class="col-lg-12">
                  <div class="blog-post">
                    <div class="blog-thumb">
                     <img src="{{ asset('images/blog/' ~ blog.blogImage) }}" alt="image">
                    </div>
                    <div class="down-content">
                      <span>{{blog.title}}</span>
                      <a href="post-details.html"><h4>Blog details</h4></a>
                      <ul class="post-info">
                        <li>{{blog.tags}}</li>
                        <li>{{blog.datePublished ? blog.datePublished|date('Y-m-d') : ''}}</li>
                        
                      </ul>
                      <p>
                      {{blog.content}}
                      </p>
                      <div class="post-options">
                        <div class="row">
                          <div class="col-6">
                            <ul class="post-tags">
                              
                              <li>
                              <button class="btn" id="likeButton" onclick="incrementLikes(this)" data-blog-id="{{ blog.id }}"><i class="fas fa-heart"></i></button>
                                    
                                </li>
                                <span><li>{{blog.nbrOfLikes}}</li></span>
                              
                            </ul>
                          </div>
                          <div class="col-6">
                            <ul class="post-share">
                              <li><i class="fa fa-share-alt"></i></li>
                              <li><a href="#">Facebook</a>,</li>
                              <li><a href="#"> Twitter</a></li>
                            </ul>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
</div>
 </div>
                </div>
</div>
